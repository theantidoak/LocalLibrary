extends layout

block content

  h1 #{title}: #{genre.name}
  
  hr

  if genre_books.length > 0

    p #[strong Remove the genre from the following books before attempting to delete this genre.]
      div(style='margin-left:20px;margin-top:20px')
        h4 Books
        dl
          each book in genre_books
            hr
            dt
              a(href=book.url) #{book.title}
            dd #{book.summary}

  else
    p Do you really want to delete this Genre?

    form(method='POST')
      div.form-group
        input#genreid.form-control(type='hidden', name='genreid', value=genre._id )

      button.btn.btn-primary(type='submit') Delete